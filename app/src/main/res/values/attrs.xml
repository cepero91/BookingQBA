<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchableSpinner">
        <attr name="hintText" format="string"/>
    </declare-styleable>
    <declare-styleable name="QuantityPicker">
        <attr name="minQuantity" format="integer" />
        <attr name="maxQuantity" format="integer"/>
        <attr name="enable" format="boolean"/>
        <attr name="quantityColor" format="color"/>
        <attr name="buttonColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textStyle" format="string"/>
    </declare-styleable>
    <declare-styleable name="DiscreteSlider">
        <attr name="ds_trackWidth" format="dimension"/>
        <attr name="ds_trackColor" format="color"/>
        <attr name="ds_inactiveTrackColor" format="color"/>
        <attr name="ds_thumbRadius" format="dimension"/>
        <attr name="ds_thumbColor" format="color"/>
        <attr name="ds_thumbPressedColor" format="color"/>
        <attr name="ds_tickMarkPatterns" format="string"/>
        <attr name="ds_tickMarkDashLength" format="dimension"/>
        <attr name="ds_tickMarkColor" format="color"/>
        <attr name="ds_tickMarkInactiveColor" format="color"/>
        <attr name="ds_valueLabelTextColor" format="color"/>
        <attr name="ds_valueLabelTextSize" format="dimension"/>
        <attr name="ds_valueLabelGravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="right" value="90"/>
            <enum name="bottom" value="180"/>
            <enum name="left" value="270"/>
        </attr>
        <attr name="ds_valueLabelVisible" format="boolean"/>
        <attr name="ds_count" format="integer"/>
        <attr name="ds_mode" format="enum">
            <enum name="normal" value="0"/>
            <enum name="range" value="1"/>
        </attr>
        <attr name="ds_progress" format="integer"/>
        <attr name="ds_minProgress" format="integer"/>
        <attr name="ds_maxProgress" format="integer"/>
        <attr name="ds_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="RangeSliderView">
        <attr name="trackTintColor" format="color|reference"/>
        <attr name="trackHighlightTintColor" format="color|reference"/>
        <attr name="trackHeight" format="dimension|reference"/>
        <attr name="thumbRadius" format="dimension|reference"/>
        <attr name="thumbOutlineSize" format="dimension|reference"/>
        <attr name="displayTextFontSize" format="dimension|reference"/>
    </declare-styleable>
</resources>