<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>

    </style>

    <style name="PixAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/White_100</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupBackground">@color/White_100</item>
        <item name="android:colorBackground">@color/White_100</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textColor">@color/material_color_blue_grey_500</item>
    </style>


    <style name="MyStyleUserInput" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="MyHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MySpinnerTextStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/material_color_grey_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallTextForIcon" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColor">@color/material_color_grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textColor">@color/material_color_grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavItemTextStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/material_color_blue_grey_600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myToast">
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/montserrat_regular</item>
        <item name="stTextSize">14sp</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stRadius">25dp</item>
    </style>

    <style name="mySuccessToast" parent="myToast">
        <item name="stColorBackground">#00BFA5</item>
        <item name="stIconStart">@drawable/ic_check</item>
    </style>

    <style name="mySuccessLocationToast" parent="myToast">
        <item name="stColorBackground">#00BFA5</item>
    </style>

    <style name="myErrorToast" parent="myToast">
        <item name="stColorBackground">#F44336</item>
        <item name="stIconStart">@drawable/ic_exclamation_triangle</item>
    </style>

    <style name="myErrorTopToast" parent="myToast">
        <item name="stColorBackground">#F44336</item>
        <item name="stIconStart">@drawable/ic_exclamation_triangle</item>
        <item name="stGravity">top</item>
    </style>

    <style name="myInfoTopToast" parent="myToast">
        <item name="stColorBackground">@color/colorPrimary</item>
        <item name="stIconStart">@drawable/ic_info_nav_white</item>
        <item name="stGravity">top</item>
        <item name="stLength">LONG</item>
    </style>

    <style name="MySpinnerStyle">
        <item name="android:background">@drawable/selector_custom_spinner</item>
    </style>

    <style name="SpinnerTextStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/White_100</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="checkboxTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColor">@color/material_color_blue_grey_300</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="switchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#009688</item>
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textSize">14sp</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/material_color_blue_grey_500</item>
        <item name="android:textColorPrimary">@color/material_color_blue_grey_500</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:windowBackground">@color/White_100</item>
        <item name="android:background">@color/White_100</item>
        <item name="android:padding">2dp</item>
        <item name="borderlessButtonStyle">@style/MyButtonBarStyle</item>
    </style>

    <style name="MyButtonBarStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">8dp</item>
    </style>

    <style name="text_12sp_regular_blue_grey_500">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/material_color_blue_grey_500</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="text_12sp_bold_blue_grey_500">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/material_color_blue_grey_500</item>
        <item name="android:fontFamily">@font/poppinsbold</item>
    </style>

    <style name="text_12sp_light_blue_grey_500">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/material_color_blue_grey_500</item>
        <item name="android:fontFamily">@font/poppinslight</item>
    </style>


</resources>
