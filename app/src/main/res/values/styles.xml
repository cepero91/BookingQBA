<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="android:textColorHint">@color/material_color_grey_300</item>
        <item name="android:textColor">@color/material_color_grey_500</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/White_100</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:animateFirstView">true</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>


    <style name="MyStyleUserInput" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="hintTextAppearance">@style/MyHintStyle</item>
    </style>

    <style name="MyHintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MySpinnerTextStyle" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/material_color_grey_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SmallTextForIcon" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColor">@color/material_color_grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textColor">@color/material_color_grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NavItemTextStyle">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/material_color_grey_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myToast">
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/poppinsregular</item>
        <item name="stTextSize">14sp</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stRadius">25dp</item>
    </style>

    <style name="mySuccessToast" parent="myToast">
        <item name="stColorBackground">#00BFA5</item>
        <item name="stIconStart">@drawable/ic_check</item>
    </style>

    <style name="myErrorToast" parent="myToast">
        <item name="stColorBackground">#F44336</item>
        <item name="stIconStart">@drawable/ic_exclamation_triangle</item>
    </style>

    <style name="MySpinnerStyle">
        <item name="android:background">@drawable/selector_custom_spinner</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>




</resources>
