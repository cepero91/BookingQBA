<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rentDetail"
            type="com.infinitum.bookingqba.model.local.pojo.RentDetail"/>
        <variable
            name="adapter"
            type="com.github.vivchar.rendererrecyclerviewadapter.RendererRecyclerViewAdapter"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.rhumbos.nac.ui.activities.ChapterDetail">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:id="@+id/shapeview_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/shape_placeholder_circle_30"
                    app:shape_roundRect_borderColor="@android:color/transparent"
                    app:shape_roundRect_bottomLeftRadius="10dp"
                    app:shape_roundRect_bottomRightRadius="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/iv_portrait_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/rent_detail_img_dimen"
                        android:layout_gravity="center"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        app:setRentDetailImage="@{rentDetail.getGaleries()}" />

                </com.github.florent37.shapeofview.shapes.RoundRectView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shapeview_image"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="-40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_content_pictures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="@dimen/rent_detail_icon_pic_dime"
                            android:layout_height="@dimen/rent_detail_icon_pic_dime"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:tint="@color/White_100"
                            app:srcCompat="@drawable/ic_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinsregular"
                            android:includeFontPadding="false"
                            app:setMaxGaleriePictures="@{rentDetail.getGaleries()}"
                            android:textColor="@color/White_100"
                            android:textSize="@dimen/rent_detail_icon_pic_text_size" />


                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_rent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppinsbold"
                                android:text="@{rentDetail.getName()}"
                                android:textColor="@color/material_color_grey_600"
                                android:textSize="@dimen/rent_detail_rent_name_size" />

                            <com.willy.ratingbar.BaseRatingBar
                                android:id="@+id/sr_scale_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_rent_name"
                                app:srb_clickable="false"
                                app:srb_drawableEmpty="@drawable/ic_star_o"
                                app:srb_drawableFilled="@drawable/ic_star"
                                app:srb_scrollable="false"
                                app:srb_starHeight="16dp"
                                app:srb_starPadding="2dp"
                                app:srb_starWidth="16dp"
                                app:srb_stepSize="0.5"
                                app:setRating="@{rentDetail.getRating()}"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/sr_scale_rating"
                                android:layout_marginBottom="15dp"
                                android:layout_marginTop="8dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="12dp"
                                    android:tint="@color/colorPrimaryDark"
                                    app:srcCompat="@drawable/ic_map_marked" />

                                <TextView
                                    android:id="@+id/tv_rent_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/poppinsregular"
                                    android:maxLines="2"
                                    android:includeFontPadding="false"
                                    android:text="@{rentDetail.getAddress()}"
                                    android:textColor="@color/material_color_grey_500"
                                    android:textSize="@dimen/rent_detail_address_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignTop="@+id/tv_rent_name"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsbold"
                                    app:setPriceText="@{rentDetail.getPrice()}"
                                    android:textSize="@dimen/rent_detail_price_size"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppinsregular"
                                    app:setRentModeString="@{rentDetail.getRentModeName()}"
                                    android:textSize="@dimen/rent_detail_rent_mode_size"/>

                            </LinearLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="22dp"
                                android:tint="@color/colorPrimaryDark"
                                app:srcCompat="@drawable/ic_door_open" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                app:setMaxRooms="@{rentDetail.getMaxRooms()}"
                                android:textAppearance="@style/SmallTextForIcon"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_grey_300" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="22dp"
                                android:tint="@color/colorPrimaryDark"
                                app:srcCompat="@drawable/ic_bed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                app:setMaxBeds="@{rentDetail.getMaxBeds()}"
                                android:textAppearance="@style/SmallTextForIcon" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_grey_300" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="22dp"
                                android:tint="@color/colorPrimaryDark"
                                app:srcCompat="@drawable/ic_bath" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                app:setMaxBath="@{rentDetail.getMaxBath()}"
                                android:textAppearance="@style/SmallTextForIcon" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_grey_300" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="3dp">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="20dp"
                                android:layout_height="22dp"
                                android:tint="@color/colorPrimaryDark"
                                app:srcCompat="@drawable/ic_street_view" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                app:setCapability="@{rentDetail.getCapability()}"
                                android:textAppearance="@style/SmallTextForIcon" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Facilidades"
                            android:fontFamily="@font/poppinsbold"
                            android:textSize="16sp"/>


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_amenities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:adapter="@{adapter}"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:background="@color/material_color_grey_100"
                        >

                        <android.support.design.widget.TabLayout
                            android:id="@+id/tl_tab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:tabIndicatorColor="@color/colorPrimaryDark"
                            app:tabTextAppearance="@style/TabTextStyle"
                            app:tabSelectedTextColor="@color/colorPrimaryDark"
                            app:tabRippleColor="@color/material_color_teal_200"
                            app:tabBackground="@color/White_100"
                            />

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vp_pages"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/White_100" />


    </android.support.constraint.ConstraintLayout>

</layout>