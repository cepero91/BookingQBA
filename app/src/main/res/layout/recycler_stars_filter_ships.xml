<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_star_filter_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rzone_filter_ship_unselected"
    android:padding="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_star_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppinsbold"
        android:includeFontPadding="false"
        android:layout_marginRight="5dp"
        android:text="5"
        android:textSize="30sp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_star_filter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:tint="@color/material_color_orange_400"
        app:srcCompat="@drawable/ic_star"/>


</LinearLayout>

