<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLoading"
            type="Boolean" />

        <variable
            name="isSignin"
            type="Boolean" />

        <variable
            name="isSignup"
            type="Boolean" />

        <variable
            name="isCode"
            type="Boolean" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:weightSum="2">

                <TextView
                    android:id="@+id/btn_signin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:text="Autenticarse"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/btn_signup"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/material_color_grey_300"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:text="Registrarse"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="10dp">

                <com.libizo.CustomEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Nombre de Usuario"
                    android:inputType="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    app:libIZO_setBackgroundColor="@color/White_100"
                    app:libIZO_setBorderColor="@color/material_color_blue_grey_200"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="false"
                    app:libIZO_setCornerRadius="5dp"
                    app:libIZO_setStrokeWidth="1dp"
                    app:visibleGone="@{!safeUnbox(isCode)}" />


                <com.libizo.CustomEditText
                    android:id="@+id/et_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Primer Nombre"
                    android:inputType="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    app:libIZO_setBackgroundColor="@color/White_100"
                    app:libIZO_setBorderColor="@color/material_color_blue_grey_200"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="false"
                    app:libIZO_setCornerRadius="5dp"
                    app:libIZO_setStrokeWidth="1dp"
                    app:visibleGone="@{safeUnbox(isSignup) &amp;&amp; !safeUnbox(isCode)}" />

                <com.libizo.CustomEditText
                    android:id="@+id/et_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Apellidos"
                    android:inputType="text"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    app:libIZO_setBackgroundColor="@color/White_100"
                    app:libIZO_setBorderColor="@color/material_color_blue_grey_200"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="false"
                    app:libIZO_setCornerRadius="5dp"
                    app:libIZO_setStrokeWidth="1dp"
                    app:visibleGone="@{safeUnbox(isSignup) &amp;&amp; !safeUnbox(isCode)}" />

                <com.libizo.CustomEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    app:libIZO_setBackgroundColor="@color/White_100"
                    app:libIZO_setBorderColor="@color/material_color_blue_grey_200"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="false"
                    app:libIZO_setCornerRadius="5dp"
                    app:libIZO_setStrokeWidth="1dp"
                    app:visibleGone="@{safeUnbox(isSignup) &amp;&amp; !safeUnbox(isCode)}" />

                <com.libizo.CustomEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="ContraseÃ±a"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    app:libIZO_setBackgroundColor="@color/White_100"
                    app:libIZO_setBorderColor="@color/material_color_blue_grey_200"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="false"
                    app:libIZO_setCornerRadius="5dp"
                    app:libIZO_setStrokeWidth="1dp"
                    app:visibleGone="@{!safeUnbox(isCode)}" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Soy anfitrion"
                    android:textSize="12sp"
                    app:visibleGone="@{safeUnbox(isSignup) &amp;&amp; !safeUnbox(isCode)}" />

                <com.libizo.CustomEditText
                    android:id="@+id/et_activation_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="Codigo"
                    android:inputType="number"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    app:libIZO_hideShowPasswordIconTint="@color/Black_100"
                    app:libIZO_setBackgroundColor="@color/White_100"
                    app:libIZO_setBorderColor="@color/material_color_blue_grey_200"
                    app:libIZO_setBorderView="true"
                    app:libIZO_setClearIconVisible="false"
                    app:libIZO_setCornerRadius="5dp"
                    app:libIZO_setStrokeWidth="1dp"
                    app:visibleGone="@{safeUnbox(isCode)}" />

                <TextView
                    android:id="@+id/tv_resend_activation_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Reenviar codigo de activacion"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="12sp"
                    app:visibleGone="@{safeUnbox(isCode)}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:layout_marginStart="3dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        fancy:fb_defaultColor="@color/colorPrimary"
                        fancy:fb_fontIconResource="&#xf00c;"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="Enviar"
                        fancy:fb_textColor="#FFF" />

                    <mehdi.sakout.fancybuttons.FancyButton
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:layout_marginStart="3dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="8dp"
                        app:visibleGone="@{safeUnbox(isCode)}"
                        fancy:fb_defaultColor="@color/material_color_red_500"
                        fancy:fb_fontIconResource="&#xf00d;"
                        fancy:fb_iconPosition="left"
                        fancy:fb_radius="30dp"
                        fancy:fb_text="Cancelar"
                        fancy:fb_textColor="#FFF" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


</layout>