<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.infinitum.bookingqba.view.adapters.items.rentlist.RentListItem"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_rent_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_content_rent_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_rent"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/shape_placeholder_rent_list"
                    app:setRentListImage="@{item.getImagePath()}"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:paddingEnd="5dp"
                    android:paddingTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_rent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:paddingStart="3dp"
                        android:text="@{item.getmName()}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"
                        android:maxLines="2"
                        android:paddingLeft="3dp"
                        android:text="@{item.getmAddress()}" />

                    <com.willy.ratingbar.BaseRatingBar
                        android:id="@+id/sr_scale_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/fl_iv_rent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srb_clickable="false"
                        app:srb_drawableEmpty="@drawable/ic_star_o"
                        app:srb_drawableFilled="@drawable/ic_star"
                        app:setRating="@{item.getRating()}"
                        app:srb_scrollable="false"
                        app:srb_starHeight="16dp"
                        app:srb_starPadding="2dp"
                        app:srb_starWidth="16dp"
                        app:srb_stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppinsbold"
                        android:paddingLeft="3dp"
                        app:setPriceText="@{item.getmPrice()}"
                        android:textSize="20sp" />


                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


    </android.support.constraint.ConstraintLayout>
</layout>