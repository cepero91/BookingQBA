<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/pages_content_m_top"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/pages_content_p_left"
        android:paddingRight="@dimen/pages_content_p_right">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_use_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pages_imageview"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/apartment_use_case" />

        <LinearLayout
            android:id="@+id/ll_content_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                android:layout_marginTop="@dimen/pages_title_margin_top"
                android:fontFamily="@font/robotoblack"
                android:text="@string/bienvenidos"
                android:textAlignment="center"
                android:textSize="@dimen/pages_title_dimen" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/robotoregular"
                android:text="Lorem ipsum dolor ipsum dolor, ipsum dolor ipsum dolor ipsum dolor ipsum dolor."
                android:textAlignment="center"
                android:textSize="@dimen/pages_desc_dimen" />

        </LinearLayout>


    </LinearLayout>


</layout>