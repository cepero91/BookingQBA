<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content_poi"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginEnd="8dp"
    android:background="@drawable/shape_rent_detail_amenitie_tv_bg">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="12sp"
        android:layout_height="12sp"
        app:srcCompat="@drawable/ic_dot_circle"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        android:tint="@color/material_color_grey_500"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/material_color_grey_500"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:text="Lugar Cercano"/>



</LinearLayout>