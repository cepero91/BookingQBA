<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    tools:context=".view.tutorial.PageFourFragment">

    <com.moos.library.CircleProgressView
        android:id="@+id/progressView_circle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="-20dp"
        app:animateType="AccelerateDecelerateInterpolator"
        app:circleBroken="true"
        app:end_color="#00796B"
        app:isFilled="false"
        app:isTracked="true"
        app:progressTextColor="#FF5722"
        app:progressTextSize="36sp"
        app:start_color="#64FFDA"
        app:start_progress="0"
        app:trackColor="#f3f3ee"
        app:track_width="26dp" />

    <LinearLayout
        android:id="@+id/ll_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robotoblack"
            android:text="Hora de Actualizar"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/robotoregular"
            android:text="Para el correcto funcionamiento debes sincronizar, pero antes dinos que tipo de renta buscas."
            android:textAlignment="center"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_checkbox_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="Para turistas extranjeros"
            android:textAlignment="center"
            android:textSize="14sp"
            android:buttonTint="#FF5722"
           />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/cb_cuban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:gravity="center"
            android:text="Para cubanos"
            android:textAlignment="center"
            android:textSize="14sp"
            android:buttonTint="#FF5722"
            />

    </LinearLayout>


</LinearLayout>


