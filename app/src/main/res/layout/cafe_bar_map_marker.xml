<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.infinitum.bookingqba.view.adapters.items.map.GeoRent" />
    </data>


    <android.support.v7.widget.CardView
        android:id="@+id/content_cafebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/siv_rent_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                app:setRoundedImage="@{item.getImagePath()}"
                app:siBorderAlpha="0"
                app:siShape="@drawable/shape_imageview_rounded_left" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingEnd="30dp">

                <TextView
                    android:id="@+id/tv_rent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@{item.getName()}"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="14sp" />

                <com.willy.ratingbar.BaseRatingBar
                    android:id="@+id/sr_scale_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:setRating="@{item.getRating()}"
                    app:srb_clickable="false"
                    app:srb_drawableEmpty="@drawable/ic_star_o"
                    app:srb_drawableFilled="@drawable/ic_star"
                    app:srb_rating="4"
                    app:srb_scrollable="false"
                    app:srb_starHeight="16dp"
                    app:srb_starPadding="2dp"
                    app:srb_starWidth="16dp"
                    app:srb_stepSize="0.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp"
                        app:setPriceText="@{item.getPrice()}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/poppinsitalic"
                        android:text="@{item.getRentMode()}"
                        android:textColor="@color/material_color_blue_grey_300"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</layout>