<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.infinitum.bookingqba.view.adapters.items.map.GeoRent" />
    </data>

    <FrameLayout
        android:id="@+id/fl_rent_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:animateLayoutChanges="true"
            android:background="@color/White_100"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_rent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@{item.getName()}"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp" />

            <com.willy.ratingbar.BaseRatingBar
                android:id="@+id/sr_scale_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="98dp"
                app:setRating="@{item.getRating()}"
                app:srb_clickable="false"
                app:srb_drawableEmpty="@drawable/ic_star_o"
                app:srb_drawableFilled="@drawable/ic_star"
                app:srb_rating="4"
                app:srb_scrollable="false"
                app:srb_starHeight="16dp"
                app:srb_starPadding="2dp"
                app:srb_starWidth="16dp"
                app:srb_stepSize="0.5" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="100dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsregular"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="14sp"
                    app:setPriceText="@{item.getPrice()}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/poppinsitalic"
                    android:text="@{item.getRentMode()}"
                    android:textColor="@color/material_color_blue_grey_300"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_poi_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:fontFamily="@font/poppinsbold"
                        android:text="Puntos de Interes"
                        android:textSize="12sp"
                        android:textColor="@color/material_color_blue_grey_500" />

                    <com.rey.material.widget.CheckBox
                        android:id="@+id/cb_show_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostrar todos"
                        android:layout_gravity="end|center"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/material_color_blue_grey_500"/>

                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_poi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/siv_rent_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="start|top"
                android:scaleType="centerCrop"
                app:setRoundedImage="@{item.getImagePath()}"
                app:siBorderAlpha="0" />

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:id="@+id/fl_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:background="@drawable/shape_btn_rounded_white">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:tint="@color/material_color_blue_grey_500"
                app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp" />

        </FrameLayout>

    </FrameLayout>


</layout>