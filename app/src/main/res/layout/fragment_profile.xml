<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="isLoading"
            type="Boolean"/>
        <variable
            name="showSelect"
            type="Boolean"/>
        <variable
            name="items"
            type="String[]"/>
    </data>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.profile.ProfileFragment">

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:focusableInTouchMode="true"
                android:src="@drawable/user"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_avatar"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppinsbold"
                android:text="Hola Jose Manuel"
                android:textColor="@color/White_100"
                android:textSize="16sp" />

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="120dp"
                android:layout_height="16dp"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:layout_below="@+id/tv_username"
                app:visibleGone="@{safeUnbox(isLoading)}"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />

            <Spinner
                android:id="@+id/spinner_rents"
                style="@style/MySpinnerStyle"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_username"
                android:layout_centerHorizontal="true"
                android:spinnerMode="dropdown"
                app:visibleGone="@{safeUnbox(showSelect)}" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_content_params"
                android:layout_below="@id/spinner_rents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:visibleGone="@{!safeUnbox(isLoading)}">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:id="@+id/ll_rent_title_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_rent_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:fontFamily="@font/poppinsmedium"
                                android:text="Paraiso Cuba"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:fontFamily="@font/poppinsregular"
                                android:text="Nivel de detalle"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <com.moos.library.CircleProgressView
                            android:id="@+id/pb_detail_percent"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginStart="5dp"
                            app:animateType="AccelerateDecelerateInterpolator"
                            app:end_color="#00796B"
                            app:isFilled="false"
                            app:isTracked="true"
                            app:progressTextColor="@color/material_color_blue_grey_500"
                            app:progressTextSize="14sp"
                            app:start_color="#64FFDA"
                            app:trackColor="#EEEEEE"
                            app:track_width="8dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_content_numbers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_rent_title_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_visit_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:fontFamily="@font/poppinsbold"
                                android:text="200"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:fontFamily="@font/poppinsregular"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="Visitas"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_blue_grey_100" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:fontFamily="@font/poppinsbold"
                                android:text="38"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:fontFamily="@font/poppinsregular"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="Comentarios"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_blue_grey_100" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_list_wish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|top"
                                android:fontFamily="@font/poppinsbold"
                                android:text="10"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|bottom"
                                android:fontFamily="@font/poppinsregular"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:text="En Deseo"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_content_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_content_params"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                app:contentPadding="5dp"
                app:visibleGone="@{!safeUnbox(isLoading)}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:includeFontPadding="false"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:text="5"
                            android:textSize="18sp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/material_color_blue_grey_200"
                            app:srcCompat="@drawable/ic_star" />

                        <com.moos.library.HorizontalProgressView
                            android:id="@+id/pb_5_star"
                            android:layout_width="220dp"
                            android:layout_height="35dp"
                            app:corner_radius="8dp"
                            app:end_color="#0097A7"
                            app:end_progress="100"
                            app:isTracked="true"
                            app:progressTextColor="#696969"
                            app:progressTextVisibility="true"
                            app:start_color="#4DD0E1"
                            app:text_padding_bottom="5dp"
                            app:trackColor="@color/material_color_grey_200"
                            app:track_width="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:includeFontPadding="false"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:text="4"
                            android:textSize="18sp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/material_color_blue_grey_200"
                            app:srcCompat="@drawable/ic_star" />

                        <com.moos.library.HorizontalProgressView
                            android:id="@+id/pb_4_star"
                            android:layout_width="220dp"
                            android:layout_height="35dp"
                            app:corner_radius="8dp"
                            app:end_color="#388E3C"
                            app:end_progress="100"
                            app:isTracked="true"
                            app:progressTextColor="#696969"
                            app:progressTextVisibility="true"
                            app:start_color="#81C784"
                            app:text_padding_bottom="5dp"
                            app:trackColor="@color/material_color_grey_200"
                            app:track_width="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:includeFontPadding="false"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:text="3"
                            android:textSize="18sp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/material_color_blue_grey_200"
                            app:srcCompat="@drawable/ic_star" />

                        <com.moos.library.HorizontalProgressView
                            android:id="@+id/pb_3_star"
                            android:layout_width="220dp"
                            android:layout_height="35dp"
                            app:corner_radius="8dp"
                            app:end_color="#FBC02D"
                            app:end_progress="100"
                            app:isTracked="true"
                            app:progressTextColor="#696969"
                            app:progressTextVisibility="true"
                            app:start_color="#FFF176"
                            app:text_padding_bottom="5dp"
                            app:trackColor="@color/material_color_grey_200"
                            app:track_width="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:includeFontPadding="false"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:text="2"
                            android:textSize="18sp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/material_color_blue_grey_200"
                            app:srcCompat="@drawable/ic_star" />

                        <com.moos.library.HorizontalProgressView
                            android:id="@+id/pb_2_star"
                            android:layout_width="220dp"
                            android:layout_height="35dp"
                            app:corner_radius="8dp"
                            app:end_color="#F57C00"
                            app:end_progress="100"
                            app:isTracked="true"
                            app:progressTextColor="#696969"
                            app:progressTextVisibility="true"
                            app:start_color="#FFB74D"
                            app:text_padding_bottom="5dp"
                            app:trackColor="@color/material_color_grey_200"
                            app:track_width="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppinsbold"
                            android:includeFontPadding="false"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:text="1"
                            android:textSize="18sp" />

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="5dp"
                            android:tint="@color/material_color_blue_grey_200"
                            app:srcCompat="@drawable/ic_star" />

                        <com.moos.library.HorizontalProgressView
                            android:id="@+id/pb_1_star"
                            android:layout_width="220dp"
                            android:layout_height="35dp"
                            app:corner_radius="8dp"
                            app:end_color="#E53935"
                            app:end_progress="100"
                            app:isTracked="true"
                            app:progressTextColor="#696969"
                            app:progressTextVisibility="true"
                            app:start_color="#E57373"
                            app:text_padding_bottom="5dp"
                            app:trackColor="@color/material_color_grey_200"
                            app:track_width="10dp" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>