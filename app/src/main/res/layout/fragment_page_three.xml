<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/pages_content_m_top"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/pages_content_p_left"
        android:paddingEnd="@dimen/pages_content_p_right">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_use_case"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pages_imageview"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/ll_content_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                android:layout_marginTop="@dimen/pages_title_margin_top"
                android:fontFamily="@font/montserrat_black"
                android:text="@string/llega_a_tu_destino"
                android:textAlignment="center"
                android:textSize="@dimen/pages_title_dimen"
                android:textColor="@color/material_color_blue_grey_500"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/page_three_text"
                android:textAlignment="center"
                android:textSize="@dimen/pages_desc_dimen"
                android:textColor="@color/material_color_blue_grey_400"/>

        </LinearLayout>

    </LinearLayout>

</layout>