<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_rent_home_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_iv_rent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/shape_placeholder_circle"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/iv_rent"
            android:layout_width="@dimen/home_iv_pop_width"
            android:layout_height="@dimen/home_iv_pop_height"
            app:siBorderAlpha="0"
            app:siRadius="15dp" />

    </FrameLayout>

    <com.willy.ratingbar.BaseRatingBar
        android:id="@+id/sr_scale_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/fl_iv_rent"
        app:layout_constraintStart_toStartOf="parent"
        app:srb_rating="4"
        app:srb_stepSize="0.5"
        app:srb_starWidth="20dp"
        app:srb_starHeight="20dp"
        app:srb_starPadding="3dp"
        app:srb_clickable="false"
        app:srb_scrollable="false"
        app:srb_drawableFilled="@drawable/ic_star"
        app:srb_drawableEmpty="@drawable/ic_star_o"/>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/White_100"
        android:paddingLeft="5dp"
        android:text="Titulo"
        android:textSize="@dimen/home_rent_pop_title_size"
        app:layout_constraintBottom_toTopOf="@+id/sr_scale_rating"
        app:layout_constraintStart_toStartOf="@+id/sr_scale_rating" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_rent_pop_price_square"
        android:fontFamily="@font/poppinsbold"
        android:includeFontPadding="false"
        android:textColor="@color/White_100"
        android:text="Precio"
        app:layout_constraintEnd_toEndOf="@+id/fl_iv_rent"
        app:layout_constraintTop_toTopOf="@+id/fl_iv_rent" />

</android.support.constraint.ConstraintLayout>