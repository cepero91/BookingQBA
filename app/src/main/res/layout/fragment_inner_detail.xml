<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="description"
            type="String" />

        <variable
            name="amenities"
            type="com.github.vivchar.rendererrecyclerviewadapter.RendererRecyclerViewAdapter" />

        <variable
            name="pois"
            type="com.github.vivchar.rendererrecyclerviewadapter.RendererRecyclerViewAdapter" />

        <variable
            name="galeries"
            type="com.github.vivchar.rendererrecyclerviewadapter.RendererRecyclerViewAdapter" />

</data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.rents.InnerDetailFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textColor="@color/material_color_blue_grey_500"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="15dp"
                android:text="Facilidades"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_amenities"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:paddingStart="15dp"
                android:adapter="@{amenities}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/material_color_blue_grey_500"
                android:fontFamily="@font/poppinsmedium"
                android:text="Descripcion"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@{description}" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Lugares Cercanos" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pois"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                android:layout_gravity="center_horizontal"
                android:adapter="@{pois}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsmedium"
                android:text="Imagenes"
                app:setGalerieVisibility="@{galeries.getItemCount()}"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_galeries"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:paddingStart="15dp"
                android:layout_gravity="center_horizontal"
                android:adapter="@{galeries}"
                app:setGalerieVisibility="@{galeries.getItemCount()}"
                />


        </LinearLayout>

    </FrameLayout>

</layout>