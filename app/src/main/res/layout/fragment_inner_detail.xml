<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="detail"
            type="com.infinitum.bookingqba.view.adapters.items.rentdetail.RentInnerDetail" />

        <variable
            name="amenities"
            type="com.github.vivchar.rendererrecyclerviewadapter.RendererRecyclerViewAdapter" />

        <variable
            name="pois"
            type="com.github.vivchar.rendererrecyclerviewadapter.RendererRecyclerViewAdapter" />

        <variable
            name="galeries"
            type="com.github.vivchar.rendererrecyclerviewadapter.RendererRecyclerViewAdapter" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rect_grey"
                android:paddingBottom="5dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp">

                <TextView
                    android:id="@+id/tv_rent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/ll_content_price"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@{detail.getName()}"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="@dimen/rent_detail_rent_name_size" />

                <LinearLayout
                    android:id="@+id/ll_content_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_rent_name"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.willy.ratingbar.BaseRatingBar
                        android:id="@+id/sr_scale_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:setRating="@{detail.getRating()}"
                        app:srb_clickable="false"
                        app:srb_drawableEmpty="@drawable/ic_star_o"
                        app:srb_drawableFilled="@drawable/ic_star"
                        app:srb_scrollable="false"
                        app:srb_starHeight="16dp"
                        app:srb_starPadding="2dp"
                        app:srb_starWidth="16dp"
                        app:srb_stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:includeFontPadding="false"
                        android:textColor="@color/material_color_grey_500"
                        android:textSize="12sp"
                        app:setVotes="@{detail.getVotes()}" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_content_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_content_rating"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        app:srcCompat="@drawable/ic_map_marked" />

                    <TextView
                        android:id="@+id/tv_rent_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppinsregular"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="@{detail.getAddress()}"
                        android:textColor="@color/material_color_grey_500"
                        android:textSize="@dimen/rent_detail_address_size" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_content_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_rent_name"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="@dimen/rent_detail_price_size"
                        app:setPriceText="@{detail.getPrice()}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/material_color_grey_500"
                        android:textSize="@dimen/rent_detail_rent_mode_size"
                        app:setRentModeString="@{detail.getRentMode()}" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_door_open" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAppearance="@style/SmallTextForIcon"
                        app:setMaxRooms="@{detail.getMaxRooms()}" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Black_5" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_bed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAppearance="@style/SmallTextForIcon"
                        app:setMaxBeds="@{detail.getMaxBeds()}" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/material_color_grey_300" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_bath" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAppearance="@style/SmallTextForIcon"
                        app:setMaxBath="@{detail.getMaxBaths()}" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/material_color_grey_300" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="22dp"
                        android:tint="@color/colorPrimaryDark"
                        app:srcCompat="@drawable/ic_street_view" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textAppearance="@style/SmallTextForIcon"
                        app:setCapability="@{detail.getCapability()}" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/facilidades"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/fb_amenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                app:alignContent="center"
                app:flexWrap="wrap" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/descripcion"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp"
                app:visibleByLength="@{detail.getDescription()}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@{detail.getDescription()}"
                android:textColor="@color/material_color_grey_500"
                app:visibleByLength="@{detail.getDescription()}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/lugares_cercanos"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp"
                app:visibleGone="@{detail.getRentPoiItems().size()>0}" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pois"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:adapter="@{pois}"
                app:visibleGone="@{detail.getRentPoiItems().size()>0}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/imagenes"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp"
                app:setGalerieVisibility="@{detail.galerieSize()}" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_galeries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:adapter="@{galeries}"
                app:setGalerieVisibility="@{detail.galerieSize()}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/reglas"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@{detail.getRules()}"
                android:textColor="@color/material_color_grey_500" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/contactos"
                android:textColor="@color/material_color_blue_grey_500"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rect_grey"
                android:baselineAligned="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/ll_btn_sms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:visibleByLength="@{detail.getPersonalPhone()}">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_sms_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/sms"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/material_color_grey_100"
                    app:visibleByLength="@{detail.getPersonalPhone()}"/>

                <LinearLayout
                    android:id="@+id/ll_btn_movile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:visibleByLength="@{detail.getPersonalPhone()}">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_call_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/movil"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/material_color_grey_100"
                    app:visibleByLength="@{detail.getPersonalPhone()}"/>

                <LinearLayout
                    android:id="@+id/ll_btn_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:visibleByLength="@{detail.getHomePhone()}">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_call_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/casa"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/material_color_grey_100"
                    app:visibleByLength="@{detail.getHomePhone()}"/>

                <LinearLayout
                    android:id="@+id/ll_btn_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:visibleByLength="@{detail.getEmail()}">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_email_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/email"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</layout>