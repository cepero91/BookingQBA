<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp">

    <LinearLayout
        android:id="@+id/ll_content_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:paddingBottom="12dp"
            android:text="Esta seguro que esta es su ubicacion" />

        <TextView
            android:id="@+id/tv_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_btn_color_primary"
            android:fontFamily="@font/poppinsregular"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Confirmar"
            android:textAlignment="center"
            android:textColor="@color/White_100" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <FrameLayout
            android:layout_width="75dp"
            android:layout_height="75dp">

            <com.rey.material.widget.ProgressView
                android:id="@+id/progress_pv_circular_inout"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:pv_autostart="true"
                app:v_styleId="@array/pv_circular_in" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="@font/poppinsbold"
            android:text="Cargando datos..."
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/material_color_blue_grey_500"
            android:text="Puntos de interes cercanos" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_poi"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/material_color_blue_grey_500"
            android:text="Zona de Referencia" />

        <TextView
            android:id="@+id/tv_reference_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsregular"
            android:layout_marginBottom="16dp"
            android:text="No disponible" />

        <TextView
            android:id="@+id/tv_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/shape_btn_color_primary"
            android:fontFamily="@font/poppinsregular"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Guardar"
            android:textAlignment="center"
            android:textColor="@color/White_100" />

    </LinearLayout>

</LinearLayout>