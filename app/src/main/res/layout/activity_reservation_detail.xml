<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="note"
            type="Boolean"/>
        <variable
            name="valoration"
            type="Boolean"/>
        <variable
            name="loading"
            type="Boolean"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.reservation.ReservationDetailActivity">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="10dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@+id/btn_accept"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_content_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/solicitud_de_reserva"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:tint="@color/material_color_blue_grey_500"
                        app:srcCompat="@drawable/ic_fa_calendar_check_line" />

                    <TextView
                        android:id="@+id/tv_from_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:includeFontPadding="false"
                        android:text="@string/desde"
                        android:textColor="@color/material_color_blue_grey_500" />

                    <TextView
                        android:id="@+id/tv_start_date_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinslight"
                        android:includeFontPadding="false"
                        android:text="@string/empty_text"
                        android:textColor="@color/material_color_blue_grey_500" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppinsbold"
                        android:includeFontPadding="false"
                        android:text="@string/hasta"
                        android:textColor="@color/material_color_blue_grey_500" />

                    <TextView
                        android:id="@+id/tv_end_date_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinslight"
                        android:includeFontPadding="false"
                        android:text="@string/empty_text"
                        android:textColor="@color/material_color_blue_grey_500" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_aditional_note_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/nota_adicional"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                    app:visibleGone="@{safeUnbox(note)}" />

                <TextView
                    android:id="@+id/tv_aditional_note_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinslight"
                    android:includeFontPadding="false"
                    android:text="@string/empty_short_text"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/tv_aditional_note_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_aditional_note_title"
                    app:visibleGone="@{safeUnbox(note)}" />

                <TextView
                    android:id="@+id/tv_user_owner_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppinsbold"
                    android:text="@string/hecha_por"
                    android:textColor="@color/material_color_blue_grey_500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_aditional_note_value" />

                <TextView
                    android:id="@+id/tv_username_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:includeFontPadding="false"
                    android:text="@string/nombre"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/user_avatar"
                    app:layout_constraintTop_toTopOf="@+id/user_avatar" />

                <TextView
                    android:id="@+id/tv_username_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppinslight"
                    android:includeFontPadding="false"
                    android:text="@string/empty_text"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_username_title"
                    app:layout_constraintStart_toEndOf="@+id/tv_username_title" />

                <TextView
                    android:id="@+id/tv_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:includeFontPadding="false"
                    android:text="@string/usuario_activo"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_username_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_username_title" />

                <TextView
                    android:id="@+id/tv_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/poppinslight"
                    android:includeFontPadding="false"
                    android:text="@string/empty_text"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_time_title"
                    app:layout_constraintStart_toEndOf="@+id/tv_time_title" />

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/user_placeholder"
                    app:civ_border_color="@color/White_100"
                    app:civ_border_width="3dp"
                    app:layout_constraintStart_toStartOf="@+id/tv_user_owner_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_user_owner_title" />


                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:id="@+id/shapes_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/user_avatar"
                    app:shape_roundRect_bottomLeftRadius="5dp"
                    app:shape_roundRect_bottomRightRadius="5dp"
                    app:shape_roundRect_topLeftRadius="5dp"
                    app:shape_roundRect_topRightRadius="5dp">


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/White_100"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:tint="@color/material_color_blue_grey_500"
                            app:srcCompat="@drawable/ic_fa_eye_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinslight"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/vistas"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_blue_grey_100" />

                        <TextView
                            android:id="@+id/tv_views_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinsbold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/empty_short_text"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.github.florent37.shapeofview.shapes.RoundRectView>

                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:id="@+id/shapes_wished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="@+id/shapes_views"
                    app:shape_roundRect_bottomLeftRadius="5dp"
                    app:shape_roundRect_bottomRightRadius="5dp"
                    app:shape_roundRect_topLeftRadius="5dp"
                    app:shape_roundRect_topRightRadius="5dp">


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/White_100"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:tint="@color/material_color_blue_grey_500"
                            app:srcCompat="@drawable/ic_fa_bookmark_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinslight"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/deseada"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_blue_grey_100" />

                        <TextView
                            android:id="@+id/tv_wished_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinsbold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/empty_short_text"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.github.florent37.shapeofview.shapes.RoundRectView>

                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:id="@+id/shapes_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/shapes_views"
                    app:shape_roundRect_bottomLeftRadius="5dp"
                    app:shape_roundRect_bottomRightRadius="5dp"
                    app:shape_roundRect_topLeftRadius="5dp"
                    app:shape_roundRect_topRightRadius="5dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/White_100"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:tint="@color/material_color_blue_grey_500"
                            app:srcCompat="@drawable/ic_fa_comment_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinslight"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/comentarios"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_blue_grey_100" />

                        <TextView
                            android:id="@+id/tv_comment_count_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinsbold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/empty_short_text"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.github.florent37.shapeofview.shapes.RoundRectView>

                <com.github.florent37.shapeofview.shapes.RoundRectView
                    android:id="@+id/shapes_book_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:elevation="4dp"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/shapes_wished"
                    app:shape_roundRect_bottomLeftRadius="5dp"
                    app:shape_roundRect_bottomRightRadius="5dp"
                    app:shape_roundRect_topLeftRadius="5dp"
                    app:shape_roundRect_topRightRadius="5dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/White_100"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:tint="@color/material_color_blue_grey_500"
                            app:srcCompat="@drawable/ic_fa_calendar_line" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinslight"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/solicitudes"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="50dp"
                            android:layout_height="0.5dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/material_color_blue_grey_100" />

                        <TextView
                            android:id="@+id/tv_book_count_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppinsbold"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/empty_short_text"
                            android:textColor="@color/material_color_blue_grey_500"
                            android:textSize="18sp" />

                    </LinearLayout>

                </com.github.florent37.shapeofview.shapes.RoundRectView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="start|center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shapes_comment_count"
                    app:visibleGone="@{safeUnbox(valoration)}">

                    <TextView
                        android:id="@+id/tv_user_valoration_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:text="@string/valoracion"
                        android:textColor="@color/material_color_blue_grey_500" />

                    <com.willy.ratingbar.BaseRatingBar
                        android:id="@+id/sr_scale_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srb_clickable="false"
                        app:srb_drawableEmpty="@drawable/ic_fa_star_o_line"
                        app:srb_drawableFilled="@drawable/ic_fa_star_line"
                        app:srb_scrollable="false"
                        app:srb_starHeight="16dp"
                        app:srb_starPadding="2dp"
                        app:srb_starWidth="16dp"
                        app:srb_stepSize="0.5" />

                    <TextView
                        android:id="@+id/tv_user_valoration_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="@string/no_me_gusto_ni_el_servicio_ni_el_trato"
                        android:textColor="@color/material_color_blue_grey_300" />

                </LinearLayout>

                <android.support.constraint.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:indeterminate="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:visibleGone="@{safeUnbox(loading)}" />


            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.NestedScrollView>

        <TextView
            android:id="@+id/btn_accept"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/shape_btn_color_primary"
            android:fontFamily="@font/poppinsregular"
            android:includeFontPadding="false"
            android:text="@string/aceptar"
            android:textAllCaps="false"
            android:textColor="@color/White_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/btn_denied"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_btn_color_red"
            android:fontFamily="@font/poppinsregular"
            android:includeFontPadding="false"
            android:text="@string/rechazar"
            android:textAllCaps="false"
            android:textColor="@color/White_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.857"
            app:layout_constraintStart_toStartOf="@+id/guideline" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70" />

    </android.support.constraint.ConstraintLayout>


</layout>