<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isLoading"
            type="Boolean" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.filter.FilterFragment">

        <ScrollView
            android:id="@+id/sv_filters_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/v_line"
            android:layout_alignParentStart="true"
            android:clipToPadding="false"
            android:fillViewport="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:paddingTop="5dp"
                        android:text="Modo de Renta"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp">

                            <Spinner
                                android:id="@+id/spinner_rent_mode"
                                style="@style/MySpinnerStyle"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown" />

                        </android.support.v7.widget.CardView>

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:paddingTop="5dp"
                        android:text="Zona"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_reference_zone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:nestedScrollingEnabled="false"
                            android:paddingLeft="10dp"
                            app:visibleGone="@{!safeUnbox(isLoading)}" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:paddingTop="5dp"
                        android:text="Facilidades"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_amenities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:nestedScrollingEnabled="false"
                            android:paddingLeft="10dp"
                            app:visibleGone="@{!safeUnbox(isLoading)}" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsbold"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:paddingTop="5dp"
                        android:text="Estrellas"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.willy.ratingbar.BaseRatingBar
                            android:id="@+id/sr_scale_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:layout_constraintBottom_toBottomOf="@+id/fl_iv_rent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:srb_rating="4"
                            app:srb_stepSize="0.5"
                            app:srb_starWidth="34dp"
                            app:srb_starHeight="34dp"
                            app:srb_starPadding="3dp"
                            app:srb_clickable="true"
                            app:srb_scrollable="true"
                            app:srb_drawableFilled="@drawable/ic_star"
                            app:srb_drawableEmpty="@drawable/ic_star_o"/>

                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ll_btn_content"
            android:layout_alignParentStart="true"
            android:background="@color/material_color_blue_grey_100" />

        <LinearLayout
            android:id="@+id/ll_btn_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:background="@color/White_100"
            android:gravity="center"
            android:orientation="horizontal">

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#4DB6AC"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="#FFF"
                fancy:fb_focusColor="#424243"
                fancy:fb_fontIconResource="&#xf00c;"
                fancy:fb_radius="30dp"
                fancy:fb_text="Filtrar"
                fancy:fb_textColor="#4DB6AC"/>

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                fancy:fb_borderColor="#F44336"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="#FFF"
                fancy:fb_focusColor="#424243"
                fancy:fb_fontIconResource="&#xf12d;"
                fancy:fb_radius="30dp"
                fancy:fb_text="Limpiar"
                fancy:fb_textColor="#F44336"/>

        </LinearLayout>

    </RelativeLayout>

</layout>