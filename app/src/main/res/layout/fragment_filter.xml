<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isLoading"
            type="Boolean" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White_100"
        tools:context=".view.filter.FilterFragment">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll_btn_content"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/btn_filter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:fontFamily="@font/poppinsbold"
                    android:gravity="center"
                    android:text="Filtrar"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/material_color_blue_grey_100" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/btn_clean"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:tint="@color/material_color_red_500"
                    app:srcCompat="@drawable/ic_multiply_set" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/bv_filter_params"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView"
            android:clipToPadding="false"
            android:paddingBottom="20dp"
            app:discreteVisibility="@{!safeUnbox(isLoading)}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="5dp"
                        android:text="Modo de renta"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_rent_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        app:visibleGone="@{!safeUnbox(isLoading)}" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="5dp"
                        android:text="Municipio"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp" />


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_municipality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:clipToPadding="false"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        app:visibleGone="@{!safeUnbox(isLoading)}" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="5dp"
                        android:text="Facilidades"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_amenities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        app:visibleGone="@{!safeUnbox(isLoading)}" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="5dp"
                        android:text="Cerca de:"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_poi_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:paddingEnd="12dp"
                        android:paddingStart="12dp"
                        app:visibleGone="@{!safeUnbox(isLoading)}" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="5dp"
                        android:text="Capacidad (huespedes):"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp" />

                    <com.jaygoo.widget.RangeSeekBar
                        android:id="@+id/rsb_capability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        app:rsb_gravity="center"
                        app:rsb_indicator_padding_bottom="3dp"
                        app:rsb_indicator_padding_left="8dp"
                        app:rsb_indicator_padding_right="8dp"
                        app:rsb_indicator_padding_top="3dp"
                        app:rsb_indicator_radius="5dp"
                        app:rsb_indicator_show_mode="alwaysShow"
                        app:rsb_max="100"
                        app:rsb_min="0"
                        app:rsb_mode="single" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="5dp"
                        android:text="Precio entre:"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp" />

                    <com.jaygoo.widget.RangeSeekBar
                        android:id="@+id/rsb_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        app:rsb_gravity="center"
                        app:rsb_indicator_padding_bottom="3dp"
                        app:rsb_indicator_padding_left="8dp"
                        app:rsb_indicator_padding_right="8dp"
                        app:rsb_indicator_padding_top="3dp"
                        app:rsb_indicator_radius="5dp"
                        app:rsb_indicator_show_mode="alwaysShow"
                        app:rsb_max="100"
                        app:rsb_min="0"
                        app:rsb_mode="range" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:paddingTop="5dp"
                        android:text="Ordenado por:"
                        android:textColor="@color/material_color_blue_grey_500"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/rg_ordering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rb_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comentarios" />

                        <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rb_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating" />

                    </RadioGroup>


                </LinearLayout>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_centerInParent="true"
            app:visibleGone="@{safeUnbox(isLoading)}">

            <com.rey.material.widget.ProgressView
                android:id="@+id/progress_pv_circular_inout"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                app:pv_autostart="true"
                app:v_styleId="@array/pv_circular_in" />

        </FrameLayout>

    </RelativeLayout>

</layout>