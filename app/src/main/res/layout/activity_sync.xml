<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isDownloading"
            type="Boolean" />

        <variable
            name="downloadImages"
            type="Boolean" />

        <variable
            name="galerieSize"
            type="Long" />

        <variable
            name="percent"
            type="Float" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:fitsSystemWindows="true"
        android:paddingStart="@dimen/pages_content_p_left"
        android:paddingEnd="@dimen/pages_content_p_right"
        android:paddingTop="25dp"
        tools:context=".view.tutorial.PageFourFragment">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_use_case"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/download_use_case"/>

        <LinearLayout
            android:id="@+id/ll_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_use_case"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:visibleGone="@{!safeUnbox(isDownloading)}">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/hora_de_actualizar"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/para_el_correcto"
                android:textAlignment="center"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/cb_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:buttonTint="#FF5722"
                android:fontFamily="@font/poppinsregular"
                android:gravity="center"
                android:text="@string/actualizar_con_imagenes"
                android:textColor="@color/material_color_grey_500"
                android:textAlignment="center"
                android:textSize="@dimen/pages_check_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_use_case"
            android:layout_margin="@dimen/pages_checkbox_m_top"
            android:orientation="vertical"
            app:visibleGone="@{safeUnbox(isDownloading)}"
            >

            <TextView
                android:id="@+id/tv_title_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                android:fontFamily="@font/poppinsbold"
                android:text="@string/actualizando"
                android:textAlignment="center"
                android:textSize="18sp" />

            <com.moos.library.HorizontalProgressView
                android:id="@+id/pb_entities"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:end_color="@color/colorPrimary"
                app:setProgress="@{percent}"
                app:isTracked="true"
                app:corner_radius="8dp"
                app:progressTextColor="#696969"
                app:progressTextVisibility="false"
                app:start_color="#80CBC4"
                app:trackColor="@color/material_color_grey_200"
                app:track_width="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_entities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                    android:fontFamily="@font/poppinsregular"
                    android:text="Llenando Base de datos"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:padding="3dp"/>

                <TextView
                    android:id="@+id/tv_entity_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppinsbold"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:padding="3dp"
                    app:setPercent="@{safeUnbox(percent)}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content_galerie_pb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:visibleGone="@{safeUnbox(downloadImages)}">

                <com.moos.library.HorizontalProgressView
                    android:id="@+id/pb_galery"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    app:end_color="@color/colorPrimary"
                    app:isTracked="true"
                    app:corner_radius="8dp"
                    app:progressTextColor="#696969"
                    app:progressTextVisibility="true"
                    app:start_color="#80CBC4"
                    app:trackColor="#f4f4f4"
                    app:track_width="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_galerie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Descargando galeria:"
                        android:padding="3dp"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_galerie_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppinsbold"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:padding="3dp"
                        app:setMbSize="@{safeUnbox(galerieSize)}" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/fb_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderColor="@color/colorPrimary"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="#FFF"
            fancy:fb_focusColor="@color/material_color_grey_400"
            fancy:fb_fontIconResource="&#xf019;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="DESCARGAR"
            fancy:fb_textColor="@color/colorPrimary"
            />


    </RelativeLayout>

</layout>