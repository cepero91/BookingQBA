<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="isDownloading"
            type="Boolean" />

        <variable
            name="downloadImages"
            type="Boolean" />

        <variable
            name="galerieSize"
            type="Long" />

        <variable
            name="percent"
            type="Float" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:fitsSystemWindows="true"
        tools:context=".view.tutorial.PageFourFragment">



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iv_use_case"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/construction.json"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse" />


            <LinearLayout
                android:id="@+id/ll_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_use_case"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:visibleGone="@{!safeUnbox(isDownloading)}">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Sincronizacion"
                    android:textAlignment="center"
                    android:textColor="@color/material_color_blue_grey_500"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/sw_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:theme="@style/switchStyle"
                        android:checked="true"
                        android:paddingEnd="3dp"
                        android:paddingStart="3dp"/>

                    <TextView
                        android:id="@+id/tv_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppinsregular"
                        android:text="Descargar Imagenes"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_content_entity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.moos.library.CircleProgressView
                            android:id="@+id/pb_entities"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            app:end_color="@color/colorPrimary"
                            app:isTracked="true"
                            app:progressTextColor="#696969"
                            app:progressTextSize="18sp"
                            app:start_color="#64FFDA"
                            app:trackColor="@color/material_color_grey_200"
                            app:track_width="10dp" />

                        <TextView
                            android:id="@+id/tv_entities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Rentas"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_content_galery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <com.moos.library.CircleProgressView
                            android:id="@+id/pb_galery"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            app:end_color="@color/colorPrimary"
                            app:isTracked="true"
                            app:progressTextColor="#696969"
                            app:progressTextSize="18sp"
                            app:setProgress="@{percent}"
                            app:start_color="#64FFDA"
                            app:trackColor="@color/material_color_grey_200"
                            app:track_width="10dp" />

                        <TextView
                            android:id="@+id/tv_galerie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/pages_title_margin_bottom"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Imagenes"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/fb_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="8dp"
                    fancy:fb_borderColor="@color/colorPrimary"
                    fancy:fb_borderWidth="2dp"
                    fancy:fb_defaultColor="#FFF"
                    fancy:fb_focusColor="@color/material_color_grey_400"
                    fancy:fb_fontIconResource="&#xf019;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="Sincronizar"
                    fancy:fb_textColor="@color/colorPrimary" />

            </LinearLayout>

    </RelativeLayout>

</layout>